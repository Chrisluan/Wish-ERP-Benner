<UserControl x:Class="Wish_ERP.Views.Components.ClientCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Padding="10" CornerRadius="8" Background="White" BorderBrush="Gray" BorderThickness="1" Width="801">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="{Binding CPF}" Foreground="Gray"/>
            <TextBlock Text="{Binding Address}" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
