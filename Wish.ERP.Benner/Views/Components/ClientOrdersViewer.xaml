<UserControl x:Class="Wish.ERP.Benner.Views.Components.ClientOrdersViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wish.ERP.Benner.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </UserControl.Resources>

    <Grid Background="#c2c2c2">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- altura maior para colocar filtros + botão -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Linha de filtros e botão -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">

            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <RadioButton Content="Todos" Margin="5,0"
                             IsChecked="{Binding StatusSelecionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=All}" />
                <RadioButton Content="Pago" Margin="5,0"
                             IsChecked="{Binding StatusSelecionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Paid}" />
                <RadioButton Content="Entregue" Margin="5,0"
                             IsChecked="{Binding StatusSelecionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Delivered}" />
                <RadioButton Content="Pendente" Margin="5,0"
                             IsChecked="{Binding StatusSelecionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Pendent}" />
                <RadioButton Content="Enviado" Margin="5,0"
                             IsChecked="{Binding StatusSelecionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Sent}" />
            </StackPanel>

            <!-- Botão criar pedido -->
            <Button Click="CreateNewOrder" Padding="5" Content="Criar novo Pedido" Width="150" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- ListView dos pedidos -->
        <ListView Grid.Row="1"
                  Background="Transparent"
                  ItemsSource="{Binding CurrentSelectedClientOrders}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                    <GridViewColumn Header="Data da Venda" DisplayMemberBinding="{Binding SaleDate}" Width="200"/>
                    <GridViewColumn Header="Produtos" DisplayMemberBinding="{Binding ProductsNames}" Width="200"/>
                    <GridViewColumn Header="Preço Total" DisplayMemberBinding="{Binding TotalOrderPrice}" Width="200"/>
                    <GridViewColumn Header="Quantidade" DisplayMemberBinding="{Binding OrderBoxes}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
