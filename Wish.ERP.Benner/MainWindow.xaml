<Window x:Class="Wish_ERP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dream Wish ERP - Benner" Height="621" Width="902" MinWidth="900" MinHeight="600">

    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigator -->
            <Grid Grid.Column="0" Background="#E6E7E8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="DreamWish" TextAlignment="Center" FontSize="20" Margin="20"/>
                <StackPanel Grid.Row="2" Margin="0,0,5,0">
                    <Button BorderThickness="0" Height="50" Content="Clientes" Margin="1" Click="OpenClientView"/>
                    <Button BorderThickness="0" Height="50" Content="Produtos" Margin="1" Click="OpenProductsView" BorderBrush="{x:Null}" Foreground="Black"/>
                    <Button BorderThickness="0" Height="50" Content="Pedidos" Margin="1" Click="OpenOrdersView"/>
                </StackPanel>
                
            </Grid>


            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Current Page Component -->
                <Border Margin="0,0,0,5" CornerRadius="5"  Background="#D2D3D5"  Grid.Row="0">
                    <TextBlock HorizontalAlignment="Left" Grid.Column="0" x:Name="ActionBar" Text="DreamWish ERP" FontSize="24" FontWeight="Bold" Margin="10"/>
                </Border>
               
                
                <!-- Content Component -->
                <Border Background="#BDBFC1" CornerRadius="5" Grid.Row="1">
                    <ContentControl x:Name="CurrentPage" ClipToBounds="True"/>
                </Border>

            </Grid>
            
        </Grid>
    </Border>
</Window>
